if BOARD_GOOGLE_LLAMA

config BOARD_SPECIFIC_OPTIONS
	def_bool y
	select MAINBOARD_HAS_BOOTBLOCK_INIT
	select SOC_MEDIATEK_MT8135
	select CHROMEOS
	select CHROMEOS_VBNV_EC
	select EC_GOOGLE_CHROMEEC
	select EC_GOOGLE_CHROMEEC_SPI

config MAINBOARD_DIR
	string
	default google/llama

config MAINBOARD_PART_NUMBER
	string
	default "MT8135_P1V2" if BOARD_VARIANT_AP148
	default "llama"

config DRAM_SIZE_MB
	int
	default 1024

config EC_GOOGLE_CHROMEEC_SPI_BUS
	hex
	default 0

endif # BOARD_GOOGLE_LLAMA
